# Production environment configuration for Clinic India

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=clinicindia
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_RANDOM_SECURE_PASSWORD_MIN_32_CHARS

# Server Configuration
NODE_ENV=production
PORT=5000
API_URL=https://clinicindia.fit

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://clinicindia.fit/api
NEXT_PUBLIC_APP_NAME=Clinic India
NEXT_PUBLIC_APP_URL=https://clinicindia.fit

# JWT Configuration (Generate new secure keys!)
JWT_SECRET=CHANGE_ME_RANDOM_JWT_SECRET_MIN_32_CHARS
JWT_EXPIRY=7d
NEXTAUTH_SECRET=CHANGE_ME_RANDOM_NEXTAUTH_SECRET_MIN_32_CHARS
NEXTAUTH_URL=https://clinicindia.fit

# CORS Configuration
CORS_ORIGIN=https://clinicindia.fit

# Email Configuration (Using your SMTP service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-clinic-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@clinicindia.fit

# Payment Gateway - Stripe (Production Keys)
STRIPE_SECRET_KEY=sk_live_CHANGE_ME
STRIPE_PUBLIC_KEY=pk_live_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_live_CHANGE_ME

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/www/clinicindia/uploads

# AWS S3 for file storage (Optional)
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
AWS_REGION=ap-south-1
AWS_S3_BUCKET=clinicindia-production

# Twilio for SMS (Optional)
TWILIO_ACCOUNT_SID=CHANGE_ME
TWILIO_AUTH_TOKEN=CHANGE_ME
TWILIO_PHONE_NUMBER=+1234567890

# Logging
LOG_LEVEL=info

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring (Optional - DataDog, New Relic, etc.)
DATADOG_API_KEY=CHANGE_ME
NEW_RELIC_LICENSE_KEY=CHANGE_ME

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
